<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="10dp"
              android:weightSum="10">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"

            android:orientation="vertical">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="From Origin to Destination"
                android:textColor="@color/colorLight"
                android:textSize="18sp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvTransportMode"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Travelled by"
                    android:textColor="@color/colorLight"
                    android:textSize="14sp"/>

            <ImageView
                    android:id="@+id/ivMrtIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_mrt"
                    android:visibility="visible"/>


            <ImageView
                    android:id="@+id/ivBusIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_bus"
                    android:visibility="visible"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="horizontal">

        <TextView
                android:id="@+id/tvDepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Departure time:"
                android:textColor="@color/colorLight"
                android:textSize="14sp"/>
        <TextView
                android:id="@+id/tvDepartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Set time"
                android:textColor="@color/colorLight"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvArrive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Arrival time:"
                    android:textColor="@color/colorLight"
                    android:textSize="14sp"/>
            <TextView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Set time"
                    android:textColor="@color/colorLight"
                    android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <ImageButton
                android:id="@+id/starEmpty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_favourite_unshaded"
                android:visibility="gone"/>

        <ImageButton
                android:id="@+id/starFilled"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_favourite"
                android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <ImageButton
                android:id="@+id/startRouteArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_next_arrow"/>

    </LinearLayout>



</LinearLayout>


